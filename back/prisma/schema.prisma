generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int      @id @default(autoincrement())
  name      String?      @unique
  email     String     @unique
  password    String  
  creationDate       DateTime      @default(now())
  expenses      Expense[]
  dashboardStats DashboardStats?
}

enum ExpenseType {
  ONE_TIME
  RECURRING
}
model Expense {
  id          Int       @id @default(autoincrement())
  description String
  category    String
  amount      Float
  createdAt   DateTime  @default(now())
  type        ExpenseType
  date        DateTime?

  startDate   DateTime?
  endDate     DateTime?

  receiptUrl  String?

  userId      Int
  user        User      @relation(fields: [userId], references: [id])
}

model DashboardStats {
  id                   Int       @id @default(autoincrement())
  totalAmount          Float     @default(0)
  recurringExpensesCount Int     @default(0)
  oneTimeExpensesCount Int       @default(0)
  mostUsedCategory     String?
  userId               Int        @unique
  user                 User      @relation(fields: [userId], references: [id])
}

